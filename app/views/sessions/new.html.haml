%main.page
  .clean-block.user-login
    .container
      .block-heading
        %h2.text-info
          ログイン画面
      = form_with(scope: :session, url: sessions_path, local: true, class: "block-content") do |f|
        .form-group
          = f.label :email
          = f.email_field :email, class: "form-control"
        .form-group{style: "padding-bottom:50px;"}
          = f.label :password
          = f.password_field :password, class: "form-control"
        = f.submit "ログインする！", class:"form-group btn btn-primary btn-block"

